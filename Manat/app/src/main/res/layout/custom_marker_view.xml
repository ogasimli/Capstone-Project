<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_color_accent"
    android:padding="@dimen/char_marker_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/marker_y_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/char_marker_text_bottom_margin"
        tools:text="1.528"
        android:textSize="@dimen/chart_marker_text_size"
        android:textColor="@color/colorPrimary"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="SmallSp"/>

    <TextView
        android:id="@+id/marker_x_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="1.528"
        android:textSize="@dimen/chart_marker_text_size"
        android:textColor="@color/colorPrimary"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="SmallSp"/>

</LinearLayout>