        android:textSize="26sp"

        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_row="1"
        app:layout_column="3"
        app:layout_gravity="fill_horizontal"
        android:padding="10dp"
        android:text="C"/>

    <View
